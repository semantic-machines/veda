      <veda-control data-type="link" rel="v-s:hasLetterRegistrationRecordRecipient" class="-view edit search create"></veda-control>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <em about="v-s:hasDocumentKind" property="rdfs:label"></em>
