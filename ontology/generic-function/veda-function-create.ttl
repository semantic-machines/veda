  self.on("v-fc:targetType", typeHandler);
  template.one("remove", function () {
    self.off("v-fc:targetType", typeHandler);
  });
  if (self.hasValue("v-fc:targetType")) {
    typeHandler(self["v-fc:targetType"]);
