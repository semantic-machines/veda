  rdfs:label "Update personal report"@en ;
.

v-s:ReportSuccessfullySaved
  rdf:type v-s:Bundle ;
  rdfs:label "Отчет успешно сохранен"@ru ;
  rdfs:label "Report successfully saved"@en ;
.

v-s:ReportSuccessfullyUpdated
  rdf:type v-s:Bundle ;
