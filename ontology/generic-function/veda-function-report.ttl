  rdfs:label "Enter label"@en ;
.

v-s:SavePersonalReport
  rdf:type v-s:Bundle ;
  rdfs:label "Сохранить личный отчет"@ru ;
  rdfs:label "Save personal report"@en ;
.

v-s:UpdatePersonalReport
  rdf:type v-s:Bundle ;
