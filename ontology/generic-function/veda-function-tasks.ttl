  }).result;

  var actors_uris = [ "v-ft:MyBundle" ];

  var appointments = get_individuals(veda.ticket, appointments_uris);
  appointments.forEach(function (appointment) {
    if ( veda.appointment && veda.appointment.id && appointment["@"] === veda.appointment.id ) {
      return;
    } else if ( appointment["v-s:occupation"] && appointment["v-s:occupation"].length ) {
      actors_uris.push( appointment["v-s:occupation"][0].data );
    }
